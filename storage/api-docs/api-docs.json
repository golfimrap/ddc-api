                                        "example": "จอห์น ชาวไร่"
                                    },
                                    "email": {
                                        "type": "varchar",
                                        "example": "user1@mail.com"
                                    },
                                    "email_verified_at": {
                                        "type": "timestamp",
                                        "example": ""
                                    },
                                    "password": {
                                        "type": "varchar",
                                        "example": "PassWord12345"
                                    },
                                    "remember_token": {
                                        "type": "varchar",
                                        "example": ""
                                    },
                                    "created_at": {
                                        "type": "timestamp",
                                        "example": "2021-04-13 15:14:44"
                                    },
                                    "updated_at": {
                                        "type": "timestamp",
                                        "example": "2021-04-14 01:22:08"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
